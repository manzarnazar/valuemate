# Fastfile for Valuemate iOS App Deployment

default_platform(:ios)

platform :ios do
  desc "Build the iOS application"
  lane :build do
    # Set up code signing
    setup_ci if ENV['CI']
    
    # Get certificates and provisioning profiles
    match(
      type: "appstore",
      readonly: is_ci,
      app_identifier: "com.valuema8",
      git_url: ENV['MATCH_GIT_URL'],
      git_basic_authorization: ENV['MATCH_GIT_BASIC_AUTHORIZATION'],
      keychain_name: ENV['MATCH_KEYCHAIN_NAME'] || "fastlane_tmp_keychain",
      keychain_password: ENV['MATCH_KEYCHAIN_PASSWORD'] || ""
    )

    # Update code signing settings
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "Runner.xcodeproj",
      code_sign_identity: "iPhone Distribution",
      profile_name: "match AppStore com.valuema8"
    )

    # Build and archive the app
    build_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "Runner.ipa",
      export_options: {
        provisioningProfiles: {
          "com.valuema8" => "match AppStore com.valuema8"
        }
      },
      skip_profile_detection: true,
      clean: false  # Don't clean since Flutter already built
    )
  end

  desc "Deploy to TestFlight"
  lane :beta do
    # Build the app first
    build

    # Upload to TestFlight
    api_key = app_store_connect_api_key(
      key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
      issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_KEY'],
      is_key_content_base64: false
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      changelog: "New build uploaded via CI/CD"
    )

    # Send notification (optional)
    slack(
      message: "Successfully deployed Valuemate #{lane_context[SharedValues::BUILD_NUMBER]} to TestFlight! ðŸš€",
      success: true,
      slack_url: ENV['SLACK_WEBHOOK_URL']
    ) if ENV['SLACK_WEBHOOK_URL']
  end

  desc "Deploy to App Store"
  lane :release do
    # Build the app first
    build

    # Upload to App Store Connect
    api_key = app_store_connect_api_key(
      key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
      issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_KEY'],
      is_key_content_base64: false
    )

    upload_to_app_store(
      api_key: api_key,
      skip_metadata: false,
      skip_screenshots: false,
      submit_for_review: false,  # Set to true if you want automatic submission
      automatic_release: false,   # Set to true for automatic release after approval
      force: true,
      precheck_include_in_app_purchases: false
    )

    # Send notification (optional)
    slack(
      message: "Successfully deployed Valuemate #{lane_context[SharedValues::BUILD_NUMBER]} to App Store! ðŸŽ‰",
      success: true,
      slack_url: ENV['SLACK_WEBHOOK_URL']
    ) if ENV['SLACK_WEBHOOK_URL']
  end

  desc "Sync certificates and profiles"
  lane :sync_signing do
    match(
      type: "appstore",
      readonly: false,
      app_identifier: "com.valuema8"
    )
    
    match(
      type: "development",
      readonly: false,
      app_identifier: "com.valuema8"
    )
  end

  desc "Increment build number"
  lane :bump_build do
    increment_build_number(
      xcodeproj: "Runner.xcodeproj"
    )
  end

  desc "Increment version number"
  lane :bump_version do |options|
    increment_version_number(
      xcodeproj: "Runner.xcodeproj",
      bump_type: options[:type] || "patch" # major, minor, or patch
    )
  end

  # Error handling
  error do |lane, exception|
    slack(
      message: "Error in lane #{lane}: #{exception.message}",
      success: false,
      slack_url: ENV['SLACK_WEBHOOK_URL']
    ) if ENV['SLACK_WEBHOOK_URL']
  end
end
